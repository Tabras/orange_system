<!DOCTYPE html>
<html>
  
  <head>
    <title>MainPage</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type">
    
    <link rel="stylesheet" href="${request.static_url('orange_system:static/bootstrap_css/bootstrap.css')}"/>
    <link rel="stylesheet" href="${request.static_url('orange_system:static/bootstrap_css/bootstrap-responsive.css')}"/>
    
    <script src="${request.static_url('orange_system:static/js/jquery.min.js')}"></script>
    <script src="${request.static_url('orange_system:static/js/bootstrap.min.js')}"></script>
    
    <script>
	  function addElement() {
      // create a new select element
      // and give it some content
      newSel = document.createElement("select");
      newOption = document.createElement("option");
      newContent = document.createTextNode("Install Linux");
      
	  newOption.appendChild(newContent); //add text to the new option
      newSel.appendChild(newOption); //add the text node to the newly created div.
      
      // add the newly created element and it's content into the DOM
      insertpoint = document.getElementById("serviceselect");
      // Get a reference to the parent element
	  parentDiv = insertpoint.parentNode;
      // now we use the information to place our select on the form
	  parentDiv.insertBefore(newSel, insertpoint);
	  }
	  
    </script>
    
  </head>
  
  <body>
    <div class="navbar-inverse navbar">
      <div class="navbar-inner">
        <div class="container">
          <div class="navbar-content">
            <ul class="nav">
              <li>
                <a href="${request.route_url('home')}">Home</a> 
              </li>
              <li>
                <a href="${request.route_url('search')}">Search</a> 
              </li>
              <li>
                <a href="${request.route_url('customer')}">Customers</a> 
              </li>
              <li class="active">
                <a href="${request.route_url('order')}">Orders #!</a> 
              </li>
              <li>
                <a href="${request.route_url('service')}">Services</a> 
              </li>
              <li>
                <a href="${request.route_url('part')}">Parts</a> 
              </li>
              <li>
                <a href="${request.route_url('report')}">Reports</a> 
              </li>
              <li>
                <a href="${request.route_url('todo')}">To-Do</a> 
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    
    <div class="span4">
      <div class="well">
		<label>** Customer name here **</label>
		<label>** Customer phone here **</label>
		<label>** Customer email here **</label>
		<br>
		<br>
        <label><b>Model</b></label>
        <input type="text" class="input-medium" placeholder="Model Name">
        <br>
        <label><b>Notes</b></label>
        <textarea></textarea>
        <br>
        <button type="submit" class="btn btn-primary">Add Order</button>
        <input type="reset" class="btn" value="Reset">
      </div>
    </div>
    
    <div class="span4">
      <div id="serviceswell" class="well">
        <label id="test"><b>Services</b></label>
        <select id="serviceselect" name="serviceselect">
          <option>Install Linux</option>
          <option>Tell me im wrong</option>
          <option>Fix the "cup holder"</option>
        </select>
        <button onclick="addElement()"><b>+</b></button>
      </div>
    </div>
    <div class="span4">
      <div class="well">
        <label><b>Parts</b></label>
        <select id="partselect" name="partselect">
          <option>Hard Drive</option>
          <option>Optical Drive</option>
          <option>Cup Holder</option>
        </select>
        <button><b>+</b></button>
      </div>
    </div>
    
    <div class="container-fluid">
      <div class="row">
        <div class="well">
          <table class="table table-striped">
          <tr>
            <th>ID</th>
              <th>Customer</th>
              <th>Model Name</th>
              <th>Notes</th>
              <th>Cost</th>
              <th>Entry Date</th>
              <th>Progress</th>
              <th>Completion Date</th>
            </tr>
          <tr tal:repeat="row orders">
            <td>${row.id}</td>
            <td>${row.custID}</td>
            <td>${row.modelName}</td>
            <td>${row.orderNotes}</td>
            <td>${row.orderCost}</td>
            <td>${row.entryDate}</td>
            <td>${row.progressDescription}</td>
            <td>${row.completionDate}</td>
          </tr>
          </table>
        </div>
      </div>
    </div>
  </body>

</html>
