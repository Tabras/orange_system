<!DOCTYPE html>
<html>
  
  <head>
    <title>MainPage</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type">
    
    <link rel="stylesheet" href="${request.static_url('orange_system:static/bootstrap_css/bootstrap.css')}"/>
    <link rel="stylesheet" href="${request.static_url('orange_system:static/bootstrap_css/bootstrap-responsive.css')}"/>
    
    <script src="${request.static_url('orange_system:static/js/bootstrap.min.js')}"></script>
    <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
    <script>
      $(document).ready(function (){
          $('#lblAddPhone').click(function (){
              alert('success!');
           });
        });
    </script>
  </head>
  
  <body>
    <div class="navbar-inverse navbar">
      <div class="navbar-inner">
        <div class="container">
          <div class="navbar-content">
            <ul class="nav">
              <li>
                <a href="${request.route_url('home')}">Home</a> 
              </li>
              <li>
                <a href="${request.route_url('search')}">Search</a> 
              </li>
              <li class="active">
                <a href="${request.route_url('customer')}">Customers #!</a> 
              </li>
              <li>
                <a href="${request.route_url('order')}">Orders</a> 
              </li>
              <li>
                <a href="${request.route_url('service')}">Services</a> 
              </li>
              <li>
                <a href="${request.route_url('part')}">Parts</a> 
              </li>
              <li>
                <a href="${request.route_url('report')}">Reports</a> 
              </li>
              <li>
                <a href="${request.route_url('todo')}">To-Do</a> 
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    
    <div class="well pull-left" style="width:46%">
	  <form method="GET" id="myForm">
	    <input id="firstname" type="text" class="input-large" placeholder="First Name #!">
		<br>
		<input id="lastname" type="text" class="input-large" placeholder="Last Name #!">
		<br>
		<input id="address" type="text" class="input-large" placeholder="Address #!">
		<br>
		<input id="city" type="text" class="input-large" placeholder="City #!">
		<select id="state">
		  <option>Wisconsin</option>
		  <option>Iowa</option>
		  <option>Canada</option>
		</select>
		<br>
		<input id="zipcode" type="text" class="input-large" placeholder="ZipCode #!">
		<br>
		<input id="phone" type="text" class="input-large" placeholder="Phone #!">
		<select id="phonetype">
		  <option>Cell</option>
		  <option>Work</option>
		  <option>Home</option>
		</select>
		<br>
		<input id="email" type="text" class="input-large" placeholder="E-Mail #!">
		<select id="emailtype">
		  <option>Personal</option>
		  <option>Professional</option>
		  <option>Work</option>
		</select>
		<br>
		<input type="submit" name="newcustomer" value="Add Customer #!"/>
	  </form>
	</div>
		
	<div class="well pull-right" style="width:46%">
	  <form id="myForm">
		<input id="firstname" type="text" class="input-large" placeholder="First Name #!">
		<br>
		<input id="lastname" type="text" class="input-large" placeholder="Last Name #!">
		<br>
		<input id="address" type="text" class="input-large" placeholder="Address #!">
		<br>
		<input id="city" type="text" class="input-large" placeholder="City #!">
		<select id="state">
		  <option>Wisconsin</option>
		  <option>Iowa</option>
		  <option>Canada</option>
		</select>
		<br>
		<input id="zipcode" type="text" class="input-large" placeholder="ZipCode #!">
		<br>
                <div tal:repeat="row customerPhone" id="phoneList">
                    <input type="text" id="phone${row.id}" class="input-large" placeholder="Phone Number #!" value="${row.phoneNumber}">
		<select id="phonetype${row.id}">
		  <option>Cell</option>
		  <option>Work</option>
		  <option>Home</option>
		</select>
                </div>
                <span class="control-label" id="lblAddPhone">Add Phone Number  <a id="btnAddPhone"><i class="icon-plus"></i></a></span>
		<br>
                 <div tal:repeat="row customerEmail">
                    <input type="text" id="email${row.id}" value="${row.emailAddress}">
                  <select id="emailType${row.id}">
                     <option>Personal</option>
                     <option>Professional</option>
                     <option>Work</option>
                  </select>
                 </div>
		<br>
		<input type="submit" name="updatecustomer" value="Update Customer #!"/>
	  </form>
	</div>
  </body>
</html>
