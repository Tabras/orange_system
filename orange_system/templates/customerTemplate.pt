<!DOCTYPE html>
<html>
  
  <head>
    <title>MainPage</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type">
    
    <link rel="stylesheet" href="${request.static_url('orange_system:static/bootstrap_css/bootstrap.css')}"/>
    <link rel="stylesheet" href="${request.static_url('orange_system:static/bootstrap_css/bootstrap-responsive.css')}"/>
    
    <script src="${request.static_url('orange_system:static/js/jquery.min.js')}"></script>
    <script src="${request.static_url('orange_system:static/js/bootstrap.min.js')}"></script>
  </head>
  
  <body>
    <div class="navbar-inverse navbar">
      <div class="navbar-inner">
        <div class="container">
          <div class="navbar-content">
            <ul class="nav">
              <li>
                <a href="${request.route_url('home')}">Home</a> 
              </li>
              <li>
                <a href="${request.route_url('search')}">Search</a> 
              </li>
              <li class="active">
                <a href="${request.route_url('customer')}">Customers #!</a> 
              </li>
              <li>
                <a href="${request.route_url('order')}">Orders</a> 
              </li>
              <li>
                <a href="${request.route_url('service')}">Services</a> 
              </li>
              <li>
                <a href="${request.route_url('part')}">Parts</a> 
              </li>
              <li>
                <a href="${request.route_url('report')}">Reports</a> 
              </li>
              <li>
                <a href="${request.route_url('todo')}">To-Do</a> 
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="container-fluid">
	<form id="customerinfo">
    <div class="span4">
      <div class="well">
		<label><b>Customer Information</b></label>
        <input id="firstname" type="text" class="input-large" placeholder="First Name #!">
		<br>
		<input id="lastname" type="text" class="input-large" placeholder="Last Name #!">
		<br>
		<input id="address" type="text" class="input-large" placeholder="Address #!">
		<br>
		<input id="city" type="text" class="input-large" placeholder="City #!">
		<select id="state">
		  <option>Wisconsin</option>
		  <option>Iowa</option>
		  <option>Canada</option>
		</select>
		<br>
		<input id="zipcode" type="text" class="input-large" placeholder="ZipCode #!">
		<br>
		<br>
		<button type="submit" class="btn btn-primary">Add Order</button>
        <input type="reset" class="btn" value="Reset">
      </div>
    </div>
    
    <div class="span6">
      <div class="well">
		<label><b>Phone Number</b></label>
        <input id="phone1" type="text" class="input-large" placeholder="Phone #1">
		<select id="phonetype">
		  <option>Cell</option>
		  <option>Work</option>
		  <option>Home</option>
		</select>
		<br>
		<input id="phone2" type="text" class="input-large" placeholder="Phone #2">
		<select id="phonetype">
		  <option>Cell</option>
		  <option>Work</option>
		  <option>Home</option>
		</select>
		<br>
		<input id="phone3" type="text" class="input-large" placeholder="Phone #3">
		<select id="phonetype">
		  <option>Cell</option>
		  <option>Work</option>
		  <option>Home</option>
		</select>
		<br>
		<br>
		<label><b>E-mails</b></label>
		<input id="email1" type="text" class="input-large" placeholder="E-Mail #1">
		<select id="emailtype">
		  <option>Personal</option>
		  <option>Professional</option>
		  <option>Work</option>
		</select>
		<br>
		<input id="email2" type="text" class="input-large" placeholder="E-Mail #2">
		<select id="emailtype">
		  <option>Personal</option>
		  <option>Professional</option>
		  <option>Work</option>
		</select>
		<br>
		<input id="email3" type="text" class="input-large" placeholder="E-Mail #3">
		<select id="emailtype">
		  <option>Personal</option>
		  <option>Professional</option>
		  <option>Work</option>
		</select>
      </div>
    </div>
    </form>
    </div>
    <br>
    <div class="container-fluid">
        <div class="well">
		<label style="font-size:26;"><b>Customer Orders</b></label>
          <table class="table table-striped">
          <tr>
            <th>ID</th>
              <th>Customer</th>
              <th>Model Name</th>
              <th>Notes</th>
              <th>Cost</th>
              <th>Entry Date</th>
              <th>Progress</th>
              <th>Completion Date</th>
            </tr>
          <tr tal:repeat="row orders">
            <td>${row.id}</td>
            <td>${row.custID}</td>
            <td>${row.modelName}</td>
            <td>${row.orderNotes}</td>
            <td>${row.orderCost}</td>
            <td>${row.entryDate}</td>
            <td>${row.progressDescription}</td>
            <td>${row.completionDate}</td>
          </tr>
          </table>
        </div>
    </div>
  </body>
</html>
